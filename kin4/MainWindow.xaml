<Window x:Class="kin4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thread Race" Height="350" Width="525">
	<Grid>
		<Button Content="Run Non-Synchronized" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top" Click="NotSynch_Button_Click"/>
		<Button Content="Run Synchronized" HorizontalAlignment="Left" Margin="200,30,0,0" VerticalAlignment="Top" Click="Synch_Button_Click"/>
		<TextBox Name="outputTextBox" HorizontalAlignment="Left" Height="50" Margin="30,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" FontSize="16"/>
	</Grid>
</Window>